{
  "name": "@phont/utils",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit",
    "check:updates": "ncu -u",
    "clean": "rm -rf .turbo dist",
    "dev": "rslib build --watch",
    "fix:lint": "eslint --fix ."
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@phont/eslint-config": "workspace:*",
    "@phont/typescript-config": "workspace:*",
    "@types/node": "^24.1.0",
    "npm-check-updates": "^18.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
