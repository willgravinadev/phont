{
  "name": "phont",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:apps": "turbo build --filter=./apps/*",
    "build:configs": "turbo build --filter=./configs/*",
    "build:packages": "turbo build --filter=./packages/*",
    "check": "bun run check:spelling && bun run check:format && bun run check:lint && bun run check:types",
    "check:format": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "check:knip": "dotenv -e .env -- knip",
    "check:lint": "turbo run check:lint && eslint . --max-warnings 0",
    "check:spelling": "cspell .",
    "check:types": "turbo run check:types",
    "check:updates": "turbo run check:updates && ncu -u",
    "clean": "turbo clean && rm -rf .turbo coverage node_modules pnpm-lock.yaml",
    "cm": "czg",
    "dev": "turbo run dev",
    "fix:format": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "fix:lint": "turbo run fix:lint && eslint --fix .",
    "preinstall": "npx --yes only-allow pnpm",
    "prepare": "husky && bun run build:configs && bun run build:packages",
    "release": "changeset publish",
    "test:e2e": "turbo test:e2e",
    "test:e2e:inspector": "turbo test:e2e:inspector",
    "test:e2e:install": "playwright install",
    "test:e2e:ui": "turbo test:e2e:ui",
    "test:unit": "vitest run",
    "test:unit:changed": "vitest --changed",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:coverage:ui": "vitest --coverage --ui",
    "test:unit:related": "vitest --related",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest",
    "version": "changeset version"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx}": "eslint --fix .",
    "**/*": [
      "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
      "cspell ."
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cspell/dict-bash": "^4.2.1",
    "@cspell/dict-companies": "^3.2.3",
    "@cspell/dict-en-gb": "5.0.11",
    "@cspell/dict-es-es": "^3.0.8",
    "@cspell/dict-filetypes": "^3.0.13",
    "@cspell/dict-html": "^4.0.12",
    "@cspell/dict-lorem-ipsum": "^4.0.5",
    "@cspell/dict-node": "^5.0.8",
    "@cspell/dict-npm": "^5.2.13",
    "@cspell/dict-redis": "^1.0.7",
    "@cspell/dict-software-terms": "^5.1.5",
    "@cspell/dict-typescript": "^3.2.3",
    "@phont/eslint-config": "workspace:*",
    "@phont/prettier-config": "workspace:*",
    "@phont/typescript-config": "workspace:*",
    "@rslib/core": "^0.11.0",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "cspell": "^9.2.0",
    "czg": "^1.12.0",
    "dotenv-cli": "^9.0.0",
    "husky": "^9.1.7",
    "knip": "^5.62.0",
    "lint-staged": "^16.1.2",
    "npm-check-updates": "^18.0.2",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": "24.4.1"
  }
}
